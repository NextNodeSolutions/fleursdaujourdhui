---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Section from '../components/common/Section.astro'
import { Button } from '../components/ui/Button'
import { Check, Heart, Sparkles, Calendar } from 'lucide-react'

const packages = [
	{
		name: 'Essentiel',
		price: 'À partir de 600€',
		description: 'L\'essentiel pour votre jour J avec des créations florales élégantes',
		features: [
			'Bouquet de mariée unique',
			'Boutonnière du marié',
			'2 compositions florales',
			'Consultation personnalisée',
		],
	},
	{
		name: 'Premium',
		price: 'À partir de 1200€',
		popular: true,
		description: 'L\'offre complète pour un mariage inoubliable',
		features: [
			'Bouquet de mariée + essai',
			'Boutonnières mariés & témoins',
			'6 compositions florales',
			'Décoration de la cérémonie',
			'Arche florale',
			'Livraison & installation',
		],
	},
	{
		name: 'Prestige',
		price: 'Sur devis',
		description: 'Une expérience florale exceptionnelle sur-mesure',
		features: [
			'Toutes prestations Premium',
			'Décoration complète réception',
			'Centres de table personnalisés',
			'Décoration voiture des mariés',
			'Coordinateur dédié',
			'Service illimité',
		],
	},
]

const gallery = [
	{
		src: 'https://images.unsplash.com/photo-1519741497674-611481863552?q=80&w=800',
		alt: 'Bouquet de mariée romantique',
	},
	{
		src: 'https://images.unsplash.com/photo-1465495976277-4387d4b0b4c6?q=80&w=800',
		alt: 'Décoration florale cérémonie',
	},
	{
		src: 'https://images.unsplash.com/photo-1460978812857-470ed1c77af0?q=80&w=800',
		alt: 'Arche florale mariage',
	},
	{
		src: 'https://images.unsplash.com/photo-1511285560929-80b456fea0bc?q=80&w=800',
		alt: 'Centre de table mariage',
	},
	{
		src: 'https://images.unsplash.com/photo-1606800052052-a08af7148866?q=80&w=800',
		alt: 'Bouquet de mariée bohème',
	},
	{
		src: 'https://images.unsplash.com/photo-1522673607200-164d1b6ce486?q=80&w=800',
		alt: 'Décoration complète mariage',
	},
]
---

<BaseLayout
	title="Mariages - Fleurs d'Aujourd'hui | Fleuriste Mariage à Gonesse"
	description="Créations florales uniques pour votre mariage. Bouquets de mariée, décoration de cérémonie et réception. Chaque création est sur-mesure et ne sera jamais reproduite."
>
	<Header />

	<main class="pt-20">
		<!-- Hero Section -->
		<Section background="rose" padding="large">
			<div class="mx-auto max-w-4xl text-center">
				<div class="mb-6 inline-flex items-center gap-2 rounded-full bg-white/50 backdrop-blur-sm px-4 py-2 text-sm font-medium text-rose-700">
					<Heart className="h-4 w-4" />
					Mariages
				</div>
				<h1 class="font-serif text-5xl font-bold text-gray-900 mb-6 md:text-6xl lg:text-7xl">
					Des fleurs uniques pour un jour <span class="gradient-text">inoubliable</span>
				</h1>
				<p class="text-xl text-gray-600 mb-10 leading-relaxed">
					Votre mariage mérite des créations florales aussi uniques que votre histoire d'amour.
					Chaque composition est pensée pour vous, créée avec passion, et ne sera jamais reproduite.
				</p>
				<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
					<Button client:load size="lg">
						Demander un devis
					</Button>
					<Button client:load variant="outline" size="lg">
						Voir nos créations
					</Button>
				</div>
			</div>
		</Section>

		<!-- Process Section -->
		<Section background="white" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Notre accompagnement</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Un processus simple et personnalisé pour créer le mariage de vos rêves
				</p>
			</div>

			<div class="grid gap-8 md:grid-cols-4">
				<div class="text-center">
					<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-rose-100 to-rose-50">
						<span class="font-serif text-2xl font-bold text-rose-600">1</span>
					</div>
					<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">Consultation</h3>
					<p class="text-gray-600">
						Rencontre gratuite pour discuter de votre vision, vos goûts et votre budget
					</p>
				</div>

				<div class="text-center">
					<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-rose-100 to-rose-50">
						<span class="font-serif text-2xl font-bold text-rose-600">2</span>
					</div>
					<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">Proposition</h3>
					<p class="text-gray-600">
						Création d'un moodboard et devis personnalisé selon vos envies
					</p>
				</div>

				<div class="text-center">
					<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-rose-100 to-rose-50">
						<span class="font-serif text-2xl font-bold text-rose-600">3</span>
					</div>
					<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">Essai</h3>
					<p class="text-gray-600">
						Essai du bouquet de mariée pour valider ensemble le style final
					</p>
				</div>

				<div class="text-center">
					<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-rose-100 to-rose-50">
						<span class="font-serif text-2xl font-bold text-rose-600">4</span>
					</div>
					<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">Jour J</h3>
					<p class="text-gray-600">
						Livraison, installation et mise en place le jour de votre mariage
					</p>
				</div>
			</div>
		</Section>

		<!-- Packages Section -->
		<Section background="rose" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Nos formules</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Des packages flexibles adaptés à tous les budgets
				</p>
			</div>

			<div class="grid gap-8 lg:grid-cols-3">
				{packages.map((pkg) => (
					<div class={`relative ${pkg.popular ? 'lg:scale-105' : ''}`}>
						{pkg.popular && (
							<div class="absolute -top-4 left-1/2 -translate-x-1/2">
								<span class="inline-flex items-center gap-1 rounded-full bg-gradient-to-r from-rose-600 to-rose-500 px-4 py-1 text-sm font-medium text-white shadow-lg">
									<Sparkles className="h-4 w-4" />
									Le plus populaire
								</span>
							</div>
						)}
						<div class={`card h-full flex flex-col ${pkg.popular ? 'border-rose-300 shadow-xl' : ''}`}>
							<div class="mb-6">
								<h3 class="font-serif text-2xl font-bold text-gray-900 mb-2">{pkg.name}</h3>
								<p class="text-3xl font-bold text-rose-600 mb-3">{pkg.price}</p>
								<p class="text-gray-600">{pkg.description}</p>
							</div>

							<ul class="space-y-3 mb-8 flex-grow">
								{pkg.features.map((feature) => (
									<li class="flex items-start gap-3">
										<Check className="h-5 w-5 text-sage-600 flex-shrink-0 mt-0.5" />
										<span class="text-gray-700">{feature}</span>
									</li>
								))}
							</ul>

							<Button
								client:load
								variant={pkg.popular ? 'default' : 'outline'}
								className="w-full"
							>
								Choisir cette formule
							</Button>
						</div>
					</div>
				))}
			</div>

			<div class="mt-12 text-center">
				<p class="text-gray-600">
					Toutes nos formules sont personnalisables selon vos besoins.{' '}
					<a href="/contact" class="font-medium text-rose-700 hover:text-rose-800 underline">
						Contactez-nous
					</a>{' '}
					pour un devis sur-mesure.
				</p>
			</div>
		</Section>

		<!-- Gallery Section -->
		<Section background="white" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Nos créations</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Quelques exemples de nos réalisations pour mariages
				</p>
			</div>

			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
				{gallery.map((image) => (
					<div class="group relative aspect-square overflow-hidden rounded-2xl shadow-lg transition-all duration-300 hover:shadow-2xl">
						<img
							src={image.src}
							alt={image.alt}
							class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
						/>
						<div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100">
							<div class="absolute bottom-0 left-0 right-0 p-6">
								<p class="text-white font-medium">{image.alt}</p>
							</div>
						</div>
					</div>
				))}
			</div>
		</Section>

		<!-- CTA Section -->
		<Section background="rose" padding="large">
			<div class="mx-auto max-w-4xl">
				<div class="rounded-3xl border border-rose-200 bg-white px-8 py-12 shadow-xl text-center">
					<div class="mx-auto mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br from-rose-100 to-rose-50">
						<Calendar className="h-10 w-10 text-rose-600" />
					</div>
					<h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">
						Réservez votre date
					</h2>
					<p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
						Les créations florales pour mariages nécessitent du temps et de la préparation.
						Contactez-nous dès maintenant pour discuter de votre projet.
					</p>
					<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
						<Button client:load size="lg">
							Prendre rendez-vous
						</Button>
						<Button client:load variant="outline" size="lg">
							Appeler maintenant
						</Button>
					</div>
					<p class="mt-6 text-sm text-gray-500">
						Nous recommandons de nous contacter 6 à 12 mois avant votre mariage
					</p>
				</div>
			</div>
		</Section>
	</main>

	<Footer />
</BaseLayout>
