---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Section from '../components/common/Section.astro'
import { Button } from '../components/ui/Button'
import { Building2, Users, Briefcase, PartyPopper, Coffee, Award } from 'lucide-react'

const eventTypes = [
	{
		icon: Briefcase,
		title: 'Événements Professionnels',
		description: 'Conférences, séminaires, lancements de produits',
		features: ['Décoration sur-mesure', 'Volumes importants', 'Livraison et installation', 'Service premium'],
	},
	{
		icon: PartyPopper,
		title: 'Événements Privés',
		description: 'Anniversaires, baptêmes, fêtes familiales',
		features: ['Ambiance personnalisée', 'Budget adapté', 'Conseils déco', 'Flexibilité'],
	},
	{
		icon: Building2,
		title: 'Événements Corporates',
		description: 'Galas, soirées d\'entreprise, inaugurations',
		features: ['Prestige & élégance', 'Gestion complète', 'Équipe dédiée', 'Coordination logistique'],
	},
	{
		icon: Coffee,
		title: 'Abonnements Entreprise',
		description: 'Fleurs fraîches régulières pour vos bureaux',
		features: ['Renouvellement automatique', 'Entretien inclus', 'Flexibilité contrat', 'Tarifs préférentiels'],
	},
]

const references = [
	{
		client: 'Hôtel Le Royal',
		event: 'Galas mensuels',
		quote: 'Des créations florales qui font toujours sensation auprès de nos clients.',
	},
	{
		client: 'TechCorp France',
		event: 'Inauguration nouveau siège',
		quote: 'Un service impeccable et des compositions magnifiques pour notre événement.',
	},
	{
		client: 'Mairie de Gonesse',
		event: 'Événements municipaux',
		quote: 'Un partenaire de confiance pour tous nos événements officiels.',
	},
]

const process = [
	{
		step: '01',
		title: 'Brief & Découverte',
		description: 'Échange sur votre événement, vos objectifs, votre vision et votre budget',
	},
	{
		step: '02',
		title: 'Proposition Créative',
		description: 'Moodboard, croquis et devis détaillé de nos créations florales',
	},
	{
		step: '03',
		title: 'Validation & Préparation',
		description: 'Confirmation des détails et préparation des compositions',
	},
	{
		step: '04',
		title: 'Installation & Service',
		description: 'Livraison, installation et service sur place le jour J',
	},
]
---

<BaseLayout
	title="Événementiel - Fleurs d'Aujourd'hui | Fleuriste Professionnel à Gonesse"
	description="Créations florales pour vos événements professionnels et privés. Galas, conférences, anniversaires, événements d'entreprise. Service clé en main."
>
	<Header />

	<main class="pt-20">
		<!-- Hero Section -->
		<Section background="white" padding="large">
			<div class="mx-auto max-w-4xl text-center">
				<div class="mb-6 inline-flex items-center gap-2 rounded-full bg-sage-100 px-4 py-2 text-sm font-medium text-sage-700">
					<Building2 className="h-4 w-4" />
					Événementiel
				</div>
				<h1 class="font-serif text-5xl font-bold text-gray-900 mb-6 md:text-6xl lg:text-7xl">
					Sublimez vos événements avec des <span class="gradient-text">créations florales</span>
				</h1>
				<p class="text-xl text-gray-600 mb-10 leading-relaxed">
					Du corporate au privé, nous créons des ambiances florales uniques qui marquent les esprits
					et font de votre événement un moment inoubliable.
				</p>
				<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
					<Button client:load size="lg">
						Demander un devis
					</Button>
					<Button client:load variant="outline" size="lg">
						Nos références
					</Button>
				</div>
			</div>
		</Section>

		<!-- Event Types Section -->
		<Section background="rose" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Types d'événements</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Nous accompagnons tous types d'événements, professionnels ou privés
				</p>
			</div>

			<div class="grid gap-8 md:grid-cols-2">
				{eventTypes.map((type) => (
					<div class="card group">
						<div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-rose-100 to-rose-50 transition-all duration-300 group-hover:scale-110">
							<type.icon className="h-8 w-8 text-rose-600" />
						</div>
						<h3 class="font-serif text-2xl font-semibold text-gray-900 mb-3">
							{type.title}
						</h3>
						<p class="text-gray-600 mb-6">{type.description}</p>
						<ul class="space-y-2">
							{type.features.map((feature) => (
								<li class="flex items-center gap-2 text-sm text-gray-600">
									<svg class="h-4 w-4 text-sage-600" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
									</svg>
									{feature}
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</Section>

		<!-- Process Section -->
		<Section background="white" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Notre processus</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Une méthode éprouvée pour des événements réussis
				</p>
			</div>

			<div class="mx-auto max-w-4xl">
				<div class="space-y-8">
					{process.map((item, index) => (
						<div class="flex gap-8 items-start">
							<div class="flex-shrink-0">
								<div class="flex h-20 w-20 items-center justify-center rounded-2xl bg-gradient-to-br from-rose-500 to-rose-600 shadow-lg">
									<span class="font-serif text-3xl font-bold text-white">{item.step}</span>
								</div>
							</div>
							<div class="flex-grow pt-2">
								<h3 class="font-serif text-2xl font-semibold text-gray-900 mb-3">
									{item.title}
								</h3>
								<p class="text-lg text-gray-600 leading-relaxed">
									{item.description}
								</p>
							</div>
							{index < process.length - 1 && (
								<div class="hidden md:block absolute left-10 w-0.5 h-full bg-rose-200 translate-y-20" />
							)}
						</div>
					))}
				</div>
			</div>
		</Section>

		<!-- Gallery Section -->
		<Section background="rose" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Nos réalisations</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Quelques exemples d'événements que nous avons décorés
				</p>
			</div>

			<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
				<div class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-lg">
					<img
						src="https://images.unsplash.com/photo-1519225421980-715cb0215aed?q=80&w=800"
						alt="Gala d'entreprise"
						class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent">
						<div class="absolute bottom-0 left-0 right-0 p-6">
							<p class="text-white font-medium text-lg">Gala d'entreprise</p>
							<p class="text-white/80 text-sm">Décoration florale complète</p>
						</div>
					</div>
				</div>

				<div class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-lg">
					<img
						src="https://images.unsplash.com/photo-1511578314322-379afb476865?q=80&w=800"
						alt="Conférence tech"
						class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent">
						<div class="absolute bottom-0 left-0 right-0 p-6">
							<p class="text-white font-medium text-lg">Conférence tech</p>
							<p class="text-white/80 text-sm">Ambiance moderne et épurée</p>
						</div>
					</div>
				</div>

				<div class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-lg">
					<img
						src="https://images.unsplash.com/photo-1530103862676-de8c9debad1d?q=80&w=800"
						alt="Anniversaire privé"
						class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent">
						<div class="absolute bottom-0 left-0 right-0 p-6">
							<p class="text-white font-medium text-lg">Anniversaire privé</p>
							<p class="text-white/80 text-sm">Décoration élégante et festive</p>
						</div>
					</div>
				</div>

				<div class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-lg">
					<img
						src="https://images.unsplash.com/photo-1505236858219-8359eb29e329?q=80&w=800"
						alt="Inauguration boutique"
						class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent">
						<div class="absolute bottom-0 left-0 right-0 p-6">
							<p class="text-white font-medium text-lg">Inauguration boutique</p>
							<p class="text-white/80 text-sm">Compositions XXL</p>
						</div>
					</div>
				</div>

				<div class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-lg">
					<img
						src="https://images.unsplash.com/photo-1464366400600-7168b8af9bc3?q=80&w=800"
						alt="Bureaux d'entreprise"
						class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent">
						<div class="absolute bottom-0 left-0 right-0 p-6">
							<p class="text-white font-medium text-lg">Bureaux d'entreprise</p>
							<p class="text-white/80 text-sm">Abonnement mensuel</p>
						</div>
					</div>
				</div>

				<div class="group relative aspect-[4/3] overflow-hidden rounded-2xl shadow-lg">
					<img
						src="https://images.unsplash.com/photo-1478146896981-b80fe463b330?q=80&w=800"
						alt="Soirée VIP"
						class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
					/>
					<div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent">
						<div class="absolute bottom-0 left-0 right-0 p-6">
							<p class="text-white font-medium text-lg">Soirée VIP</p>
							<p class="text-white/80 text-sm">Ambiance luxueuse</p>
						</div>
					</div>
				</div>
			</div>
		</Section>

		<!-- References Section -->
		<Section background="white" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Ils nous font confiance</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Nos clients partagent leur expérience
				</p>
			</div>

			<div class="grid gap-8 md:grid-cols-3">
				{references.map((ref) => (
					<div class="card">
						<Award className="h-10 w-10 text-rose-600 mb-4" />
						<p class="text-gray-700 italic mb-6 leading-relaxed">
							"{ref.quote}"
						</p>
						<div class="border-t border-gray-200 pt-4">
							<p class="font-semibold text-gray-900">{ref.client}</p>
							<p class="text-sm text-gray-600">{ref.event}</p>
						</div>
					</div>
				))}
			</div>
		</Section>

		<!-- CTA Section -->
		<Section background="rose" padding="large">
			<div class="mx-auto max-w-4xl">
				<div class="rounded-3xl border border-rose-200 bg-white px-8 py-12 shadow-xl text-center">
					<div class="mx-auto mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br from-rose-100 to-rose-50">
						<Users className="h-10 w-10 text-rose-600" />
					</div>
					<h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">
						Parlons de votre projet
					</h2>
					<p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
						Chaque événement est unique. Contactez-nous pour discuter de vos besoins
						et recevoir un devis personnalisé sous 48h.
					</p>
					<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
						<Button client:load size="lg">
							Demander un devis
						</Button>
						<Button client:load variant="outline" size="lg">
							Appeler maintenant
						</Button>
					</div>
					<div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-6 text-sm text-gray-600">
						<div class="flex items-center gap-2">
							<svg class="h-5 w-5 text-sage-600" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
							</svg>
							Devis gratuit
						</div>
						<div class="flex items-center gap-2">
							<svg class="h-5 w-5 text-sage-600" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
							</svg>
							Réponse sous 48h
						</div>
						<div class="flex items-center gap-2">
							<svg class="h-5 w-5 text-sage-600" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
							</svg>
							Service clé en main
						</div>
					</div>
				</div>
			</div>
		</Section>
	</main>

	<Footer />
</BaseLayout>
