---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Section from '../components/common/Section.astro'
import { Button } from '../components/ui/Button'
import { Repeat, Check, Truck, Calendar, Gift, Sparkles } from 'lucide-react'

const plans = [
	{
		name: 'Découverte',
		frequency: 'Hebdomadaire',
		price: '29€',
		priceDetail: 'par livraison',
		description: 'Parfait pour découvrir nos créations florales',
		features: [
			'1 bouquet frais par semaine',
			'Compositions variées',
			'Livraison à domicile',
			'Sans engagement',
			'Pause possible à tout moment',
		],
		color: 'rose',
	},
	{
		name: 'Passion',
		frequency: 'Bi-hebdomadaire',
		price: '49€',
		priceDetail: 'par livraison',
		description: 'Pour les amoureux des fleurs fraîches',
		popular: true,
		features: [
			'2 bouquets frais par semaine',
			'Compositions premium',
			'Livraison à domicile',
			'Sans engagement',
			'Priorité sur les créations',
			'Carte personnalisée offerte',
		],
		color: 'rose',
	},
	{
		name: 'Entreprise',
		frequency: 'Mensuel',
		price: 'Sur devis',
		priceDetail: 'selon vos besoins',
		description: 'Embellissez vos bureaux en continu',
		features: [
			'Compositions sur-mesure',
			'Renouvellement régulier',
			'Installation & entretien',
			'Facture mensuelle',
			'Service dédié',
			'Contrat flexible',
		],
		color: 'sage',
	},
]

const benefits = [
	{
		icon: Calendar,
		title: 'Flexibilité totale',
		description: 'Mettez en pause ou annulez votre abonnement à tout moment, sans frais ni engagement.',
	},
	{
		icon: Truck,
		title: 'Livraison incluse',
		description: 'Nous livrons directement chez vous ou à votre bureau, aux jours et horaires qui vous conviennent.',
	},
	{
		icon: Sparkles,
		title: 'Toujours unique',
		description: 'Chaque bouquet est une création originale. Vous ne recevrez jamais deux fois le même.',
	},
	{
		icon: Gift,
		title: 'Avantages exclusifs',
		description: 'Offres spéciales, priorité sur les événements et remises sur les créations sur-mesure.',
	},
]

const faqs = [
	{
		question: 'Comment fonctionne l\'abonnement ?',
		answer: 'Vous choisissez votre formule et vos préférences. Nous créons et livrons vos bouquets selon la fréquence choisie. Vous pouvez modifier ou annuler à tout moment.',
	},
	{
		question: 'Puis-je choisir les fleurs ?',
		answer: 'Vous pouvez nous indiquer vos couleurs et styles préférés. Cependant, nos créations sont uniques et composées selon les fleurs de saison disponibles.',
	},
	{
		question: 'Que se passe-t-il si je suis absent ?',
		answer: 'Vous pouvez mettre votre abonnement en pause ou reporter une livraison gratuitement en nous prévenant 48h à l\'avance.',
	},
	{
		question: 'Y a-t-il un engagement minimum ?',
		answer: 'Non, aucun engagement. Vous pouvez annuler à tout moment sans frais. Nous demandons simplement un préavis de 48h pour la prochaine livraison.',
	},
]
---

<BaseLayout
	title="Abonnements - Fleurs d'Aujourd'hui | Bouquets Livrés à Gonesse"
	description="Abonnement fleurs fraîches à Gonesse. Recevez régulièrement des bouquets uniques chez vous ou au bureau. Sans engagement, livraison incluse."
>
	<Header />

	<main class="pt-20">
		<!-- Hero Section -->
		<Section background="white" padding="large">
			<div class="mx-auto max-w-4xl text-center">
				<div class="mb-6 inline-flex items-center gap-2 rounded-full bg-rose-100 px-4 py-2 text-sm font-medium text-rose-700">
					<Repeat className="h-4 w-4" />
					Abonnements
				</div>
				<h1 class="font-serif text-5xl font-bold text-gray-900 mb-6 md:text-6xl lg:text-7xl">
					Des fleurs fraîches <span class="gradient-text">livrées</span> régulièrement
				</h1>
				<p class="text-xl text-gray-600 mb-10 leading-relaxed">
					Égayez votre quotidien avec des bouquets uniques livrés chez vous ou au bureau.
					Sans engagement, flexible et toujours surprenant.
				</p>
				<div class="flex flex-col sm:flex-row items-center justify-center gap-4">
					<Button client:load size="lg">
						Choisir mon abonnement
					</Button>
					<Button client:load variant="outline" size="lg">
						Comment ça marche ?
					</Button>
				</div>
			</div>
		</Section>

		<!-- Plans Section -->
		<Section background="rose" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Nos formules</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Choisissez la fréquence qui vous convient le mieux
				</p>
			</div>

			<div class="grid gap-8 lg:grid-cols-3">
				{plans.map((plan) => (
					<div class={`relative ${plan.popular ? 'lg:scale-105' : ''}`}>
						{plan.popular && (
							<div class="absolute -top-4 left-1/2 -translate-x-1/2">
								<span class="inline-flex items-center gap-1 rounded-full bg-gradient-to-r from-rose-600 to-rose-500 px-4 py-1 text-sm font-medium text-white shadow-lg">
									<Sparkles className="h-4 w-4" />
									Le plus populaire
								</span>
							</div>
						)}
						<div class={`card h-full flex flex-col ${plan.popular ? 'border-rose-300 shadow-xl' : ''}`}>
							<div class="mb-6">
								<div class="inline-flex items-center gap-2 rounded-full bg-sage-100 px-3 py-1 text-xs font-medium text-sage-700 mb-3">
									{plan.frequency}
								</div>
								<h3 class="font-serif text-3xl font-bold text-gray-900 mb-2">{plan.name}</h3>
								<div class="mb-3">
									<span class="text-4xl font-bold text-rose-600">{plan.price}</span>
									<span class="text-gray-600 ml-2">{plan.priceDetail}</span>
								</div>
								<p class="text-gray-600">{plan.description}</p>
							</div>

							<ul class="space-y-3 mb-8 flex-grow">
								{plan.features.map((feature) => (
									<li class="flex items-start gap-3">
										<Check className="h-5 w-5 text-sage-600 flex-shrink-0 mt-0.5" />
										<span class="text-gray-700">{feature}</span>
									</li>
								))}
							</ul>

							<Button
								client:load
								variant={plan.popular ? 'default' : 'outline'}
								className="w-full"
							>
								{plan.name === 'Entreprise' ? 'Demander un devis' : 'Commencer maintenant'}
							</Button>
						</div>
					</div>
				))}
			</div>

			<div class="mt-12 text-center">
				<p class="text-gray-600">
					Toutes nos formules sont sans engagement et incluent la livraison.{' '}
					<a href="#faq" class="font-medium text-rose-700 hover:text-rose-800 underline">
						Questions fréquentes
					</a>
				</p>
			</div>
		</Section>

		<!-- Benefits Section -->
		<Section background="white" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Pourquoi s'abonner ?</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Les avantages d'un abonnement floral
				</p>
			</div>

			<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
				{benefits.map((benefit) => (
					<div class="text-center">
						<div class="mx-auto mb-6 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-rose-100 to-rose-50">
							<benefit.icon className="h-8 w-8 text-rose-600" />
						</div>
						<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">
							{benefit.title}
						</h3>
						<p class="text-gray-600 leading-relaxed">
							{benefit.description}
						</p>
					</div>
				))}
			</div>
		</Section>

		<!-- How it works Section -->
		<Section background="rose" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Comment ça marche ?</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Simple, flexible et sans contrainte
				</p>
			</div>

			<div class="mx-auto max-w-4xl">
				<div class="grid gap-8 md:grid-cols-3">
					<div class="text-center">
						<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-rose-500 to-rose-600 shadow-lg">
							<span class="font-serif text-3xl font-bold text-white">1</span>
						</div>
						<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">
							Choisissez votre formule
						</h3>
						<p class="text-gray-600">
							Sélectionnez la fréquence et le type de bouquets qui vous convient
						</p>
					</div>

					<div class="text-center">
						<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-rose-500 to-rose-600 shadow-lg">
							<span class="font-serif text-3xl font-bold text-white">2</span>
						</div>
						<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">
							Indiquez vos préférences
						</h3>
						<p class="text-gray-600">
							Partagez vos couleurs favorites et vos styles préférés
						</p>
					</div>

					<div class="text-center">
						<div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-gradient-to-br from-rose-500 to-rose-600 shadow-lg">
							<span class="font-serif text-3xl font-bold text-white">3</span>
						</div>
						<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">
							Recevez vos bouquets
						</h3>
						<p class="text-gray-600">
							Profitez de vos créations florales uniques livrées régulièrement
						</p>
					</div>
				</div>

				<div class="mt-16 rounded-3xl border border-rose-200 bg-white px-8 py-12 shadow-xl">
					<div class="flex flex-col md:flex-row items-center gap-8">
						<div class="flex-shrink-0">
							<div class="h-24 w-24 rounded-full bg-gradient-to-br from-rose-100 to-rose-50 flex items-center justify-center">
								<Gift className="h-12 w-12 text-rose-600" />
							</div>
						</div>
						<div class="flex-grow text-center md:text-left">
							<h3 class="font-serif text-2xl font-bold text-gray-900 mb-2">
								Offrez un abonnement
							</h3>
							<p class="text-gray-600 mb-4">
								L'idée cadeau parfaite pour faire plaisir durablement. Carte cadeau disponible pour 1, 3, 6 ou 12 mois.
							</p>
							<Button client:load variant="outline">
								Offrir un abonnement
							</Button>
						</div>
					</div>
				</div>
			</div>
		</Section>

		<!-- FAQ Section -->
		<Section background="white" padding="large">
			<div id="faq" class="text-center mb-16">
				<h2 class="section-title">Questions fréquentes</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Tout ce que vous devez savoir sur nos abonnements
				</p>
			</div>

			<div class="mx-auto max-w-3xl space-y-6">
				{faqs.map((faq) => (
					<div class="card">
						<h3 class="font-serif text-xl font-semibold text-gray-900 mb-3">
							{faq.question}
						</h3>
						<p class="text-gray-600 leading-relaxed">
							{faq.answer}
						</p>
					</div>
				))}
			</div>

			<div class="mt-12 text-center">
				<p class="text-gray-600 mb-4">
					Vous avez d'autres questions ?
				</p>
				<Button client:load variant="outline">
					Contactez-nous
				</Button>
			</div>
		</Section>

		<!-- CTA Section -->
		<Section background="rose" padding="large">
			<div class="mx-auto max-w-4xl">
				<div class="rounded-3xl border border-rose-200 bg-white px-8 py-12 shadow-xl text-center">
					<div class="mx-auto mb-6 inline-flex h-20 w-20 items-center justify-center rounded-full bg-gradient-to-br from-rose-100 to-rose-50">
						<Repeat className="h-10 w-10 text-rose-600" />
					</div>
					<h2 class="font-serif text-4xl font-bold text-gray-900 mb-4">
						Prêt à embellir votre quotidien ?
					</h2>
					<p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
						Commencez votre abonnement dès aujourd'hui. Profitez de fleurs fraîches
						et uniques livrées directement chez vous. Sans engagement.
					</p>
					<Button client:load size="lg">
						Commencer mon abonnement
					</Button>
					<p class="mt-6 text-sm text-gray-500">
						Première livraison sous 48h • Sans engagement • Livraison incluse
					</p>
				</div>
			</div>
		</Section>
	</main>

	<Footer />
</BaseLayout>
