---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.astro'
import { Hero } from '../components/Hero'
import { BouquetsGrid } from '../components/BouquetsGrid'
import { InstagramFeed } from '../components/InstagramFeed'
import { ValuesHistory } from '../components/ValuesHistory'
import Services from '../components/Services.astro'
import Section from '../components/common/Section.astro'
import Footer from '../components/Footer.astro'
---

<BaseLayout
	title="Fleurs d'Aujourd'hui - Fleuriste Artisan à Gonesse | Bouquets Uniques"
	description="Fleuriste artisan à Gonesse. Créations florales uniques et personnalisées pour mariages, événements et abonnements. Chaque bouquet est fait avec passion et ne sera jamais reproduit."
>
	<Header />

	<main>
		<!-- Hero avec parallax -->
		<Hero client:load />

		<!-- Bouquets du jour -->
		<Section id="bouquets" background="white" padding="large">
			<div class="text-center mb-16">
				<h2 class="section-title">Bouquets du jour</h2>
				<p class="section-subtitle max-w-2xl mx-auto">
					Découvrez nos créations disponibles. Chaque bouquet est unique et ne sera jamais reproduit à l'identique.
				</p>
			</div>
			<BouquetsGrid client:visible />
		</Section>

		<!-- Nos valeurs + Notre Histoire -->
		<ValuesHistory client:visible />

		<!-- Services -->
		<Services />

		<!-- Instagram Feed -->
		<Section id="instagram" background="white" padding="large">
			<InstagramFeed client:visible />
		</Section>
	</main>

	<Footer />
</BaseLayout>
